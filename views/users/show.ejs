<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>
    <% include ../partials/header %>
    <main>
        <h2><%=user.username%>'s Habits</h2>
        <section class="user-habits">
            top habits
                <% for(let i = 0; i < user.habits.length; i++) { %>
                    <div value="<%=user.habits[i]._id%>">
                        <%=user.habits[i].name%>
                        <form action="/habits/<%=userID%>/<%=i%>?_method=DELETE" method="POST">
                            <button type="submit">X</button>
                        </form>
                    </div>
                <% } %>
        </section>
        <section class="add-habit">
                <form method="POST" action="/habits/<%=userID%>">
                    <select name="habitId">
                        <% for(let i = 0; i < habits.length; i++) { %>
                            <option value="<%=habits[i]._id%>"><%=habits[i].name%></option>
                        <% } %>
                    </select><br/>
                    OR:<br/>
                    Habit name: <input type="text" name="name" value=""><br/>
                    Type: <input type="text" name="type" value=""><br/>
                    Icon: <input type="text" name="icon" value=""><br/>
                    <button type="submit">SUBMIT</button>
                </form>
        </section>
        <section class="add-activity">
            <form method="POST" action="/activities/<%#=user._id%>">
                <select name="habitId">
                        <% for(let i = 0; i < habits.length; i++) { %>
                            <option value="<%=habits[i]._id%>"><%=habits[i].name%></option>
                        <% } %>
                </select><br/>
                Date: <input type="text" name="date-day" value="">
                      <input type="text" name="date-month" value="">
                      <input type="text" name="date-year" value="">
                </br>
                Time (minutes): <input type="text" name="time" value=""></br>
                <button type="submit">SUBMIT</button>
            </form>
        </section>
        <section>
            Recent habits
        </section>
        <form action="/users/<%=user._id%>/edit" method="GET">
            <button type="submit">Edit Profile</button>
        </form>
        <form method='GET' action='/users/' >
            <button type='submit'>back</button>
        </form>
    </main>
</body>
</html>